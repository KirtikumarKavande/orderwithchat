{
    "compilerOptions": {
      "target": "ES2020",
      "module": "CommonJS",
      "outDir": "./dist",
      "rootDir": "../",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": ["../**/*.ts", "./**/*.ts", "../data/**/*.json"],
    "exclude": ["../node_modules", "../.next", "./node_modules"]
  }